---
import { flex } from "styled-system/patterns";
import { heading1 } from "./mdx-classes";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header
  class={flex({
    direction: "column",
    gap: "sm",
    width: "full",
    minHeight: "240px",
    justifyContent: "center",
    p: "block",
  })}
>
  <slot name="top" />
  <h1 class={heading1}>{title}</h1>
  <slot name="bottom" />
</header>
